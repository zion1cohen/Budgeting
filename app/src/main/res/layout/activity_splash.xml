<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#87CEEB"
        tools:ignore="ExtraText"
        tools:layout_editor_absoluteX="-31dp"
        tools:layout_editor_absoluteY="16dp"> <!-- Light Blue Background Color -->

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="259dp"
            android:layout_height="324dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="76dp"
            android:layout_marginTop="232dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="175dp"
            android:src="@drawable/img"></ImageView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="108dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="542dp"
            android:text="College Budgeting"
            android:textAlignment="center"
            android:textColor="#F6F2F2"
            android:textColorHighlight="#230505"
            android:textSize="35sp" /> <!-- Replace with your app logo -->
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp" />

        <!-- Add more UI elements or animations as needed -->

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>